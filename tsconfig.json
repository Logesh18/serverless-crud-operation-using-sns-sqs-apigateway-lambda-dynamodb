{
  "compilerOptions": {
    // "baseUrl": "./",
    // "paths": {
    //   "@handlers/*": ["src/handlers/*"]
    // },
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".build", // Adjusted to match your project structure
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "rootDir": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files within the 'src' directory and its subdirectories
  "exclude": ["node_modules", ".serverless", "_warmup", ".vscode", "**/*.spec.ts"]
}
